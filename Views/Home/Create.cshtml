@model Filme
    <div class="text-center text-light">
        <h4>Cadastro de filme</h4>

        <div class="row text-light">

            <div class="col-md-4 text-light">
                <form asp-action="Create">
                    <div class="form-group">
                        <label asp-for="nome" class="control-label"></label>
                        <input asp-for="nome" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="sinopse" class="control-label"></label>
                        <input asp-for="sinopse" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="preco" class="control-label"></label>
                        <input asp-for="preco" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="lancamento" class="control-label"></label>
                        <input asp-for="lancamento" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="duracao" class="control-label"></label>
                        <input asp-for="duracao" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="link" class="control-label"></label>
                        <input asp-for="link" class="form-control" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Adicionar novo filme!" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-info">Voltar para Filmes</a>
                    </div>
                </form>
            </div>
            </div>
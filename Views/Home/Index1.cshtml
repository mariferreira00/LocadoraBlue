@{
    ViewData["Title"] = "Home Page";
}


<div class="jumbotron jumbotron-fluid bg-dark text-white text-center">
    <h1 class="text-center" class="font-weight-bold">Seja bem vindo a Locadora Blue</h1>
    <p class="text-center" class="font-italic">Os melhores filmes num só lugar !</p>
    <p class="text-center" class="font-italic">Faça login e confira a sua "Sorte do Dia" para ganhar descontos exclusivos !</p>
    <a asp-area="" asp-controller="Locacao" asp-action="Index1" class="btn btn-info">Sorte do dia</a>
    <hr class="my-4">
</div>


<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://cinepop.com.br/wp-content/uploads/2021/01/liga-da-justica.jpg" alt="Primeiro Slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://eagoracast.com/wp-content/uploads/2019/10/Coringa-Critica-Filme-Joker.jpg" alt="Segundo Slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://blogs.uai.com.br/opipoqueiro/wp-content/uploads/sites/54/2015/02/jupiter-ascending.jpg" alt="Terceiro Slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Anterior</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Próximo</span>
    </a>
</div>